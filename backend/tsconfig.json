{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "lib": ["ES2020"],                    // pour Array.find, String.includes, Set, Promise…
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,            // si vous importez du JSON
        "types": ["node", "bcrypt", "nodemailer"],                    // expose __dirname, process, fs, path…
        "outDir": "dist",
        "rootDir": "src"
    },
    "include": ["src"]
    }